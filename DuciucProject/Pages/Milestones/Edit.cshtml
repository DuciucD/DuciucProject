@page
@model DuciucProject.Pages.Milestones.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Milestone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Milestone.Id" />
            <div class="form-group">
                <label asp-for="Milestone.Name" class="control-label"></label>
                <input asp-for="Milestone.Name" class="form-control" />
                <span asp-validation-for="Milestone.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Milestone.Description" class="control-label"></label>
                <input asp-for="Milestone.Description" class="form-control" />
                <span asp-validation-for="Milestone.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Milestone.ProjectId" class="control-label"></label>
                <select asp-for="Milestone.Project.Name" class="form-control" asp-items="ViewBag.ProjectId"></select>
                <span asp-validation-for="Milestone.ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
